<div id="contain">
  <div class="row">

    <% flash.each do |name, msg| %>
        <div class="col s12 offset-m3 m6 z-depth-2 message <%=name %>">
        <%= content_tag :div, msg%>
          <% if @donor.errors.any? %>
              <% @donor.errors.full_messages.each do |message| %>
                  <div><%= message.last%></div>
              <% end %>
          <% end %>
        </div>
    <% end %>

    <div class="col s12 m6 offset-m3 z-depth-2" id="search-card">
      <div class="row valign center-align">
        <div class="input-field col s12 m6">
          <label>فصيلة الدم</label>
        </div>
        <div class="input-field col s12 m6">
          <label>الولاية</label>
        </div>
        <div class="row">
          <button class="btn waves-effect waves-light" type="submit" name="action">بحث</button>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 offset-m3 m6 z-depth-1-half" id="register-card">
      <div class="row">
        <%= form_for Donor.new ,:html => {:class =>"col s12"} ,:url => donors_path do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :name,:type=>"text",:class=>"validate" %>
              <%= f.label :name,"الاسم" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :phone_number,:type=>"text" ,:class=>"validate" %>
              <%= f.label :phone_number , "رقم الهاتف" %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.select(:city, City.all.collect {|city| [ city.name, city.id ] },{prompt: 'اختر ولايتك'}) %>
              <label>الولاية</label>
            </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                <%= f.select(:blood_type, options_for_select([["A+","A+"],["A-","A-"],["B+","B+"],["B-","B-"],["O+","O+"],["O-","O-"],["AB+","AB+"],["AB-","AB-"]]),{prompt: 'فصيلة الدم'}) %>
                <label>فصيلة الدم</label>
              </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.text_field :email,:type=>"email",:class=>"validate" %>
              <%= f.label :email,"البريد الالكتروني" %>
            </div>
          </div>
          <div class="row center-align">
            <%= f.submit "تسجيل متبرع جديد" ,:class=>"btn"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer'%>