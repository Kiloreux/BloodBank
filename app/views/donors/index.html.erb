
<div class="row">
  <h1>قائمة المتبرعين</h1>
</div>
<div id="contain">
  <div class="row">
    <div class="col s12 offset-m3 m6 z-depth-1-half" id="results">
      <div class="row">
        <% if @donors.any? %>
            <% @donors.each do |donor| %>
                <div class="col s12 m12 waves-effect single-donor" >
                  <span class="dn"> <%= donor.name %> </span>
                  <span class="dp"> <%= donor.blood_type %></span>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>